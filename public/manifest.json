{
  "manifest_version": 3,
  "name": "BA LAURA JUERGENSMEIER - Barrierefreiheit",
  "description": "Diese Erweiterung ist Teil der Bachelorarbeit von Laura JÃ¼rgensmeier. Es handelt sich um einen Prototypen.",
  "version": "1.0",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "600": "font-are-awesome-universal-accessibility.png"
    }
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "commands": {
    "toggle_active": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Ein- und Ausschaltung mit der Tastatur"
    }
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["content.css"],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "minimum_chrome_version": "102",
  "omnibox": {
    "keyword": "api"
  }
}